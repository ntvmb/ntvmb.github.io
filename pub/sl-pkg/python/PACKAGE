NAME=python
DESCRIPTION="Interactive high-level object-oriented language"
VERSION="3.13.4"
ABOSULTE_VERSION=199940
URL="https://www.python.org/ftp/python/3.13.4/Python-3.13.4.tar.xz"
BUILD_DEPENDS=(patch make gcc binutils)
DEPENDS=(glibc expat zlib tzdata openssl)
OPTDEPENDS=()
PATCHES=()
METAPACKAGE=false

prepare() {
    ./configure --prefix=/usr          \
                --enable-shared        \
                --with-system-expat    \
                --enable-optimizations \
                --without-static-libpython
    return $?
}

build() {
    # don't let sl-pkg attempt to build from this directory
    if [ "$(basename $(pwd))" = "build" ]; then cd ..; fi
    make || return 1
    # some tests occasionally hang indefinitely
    # set a time limit for each test case
    make test TESTOPTS="--timeout 120"
    return $?
}

do_install() {
    if [ "$(basename $(pwd))" = "build" ]; then cd ..; fi
    make install
    return $?
}

postinst() {
    if [ ! -f /etc/pip.conf ]; then
        cat > /etc/pip.conf << EOF
[global]
root-user-action = ignore
disable-pip-version-check = true
EOF
    fi
    return 0
}

detect() {
    OUT=$(python3 --version) || return 1
    declare -g VERSION=$(echo $OUT | awk '{ print $2; }')
}

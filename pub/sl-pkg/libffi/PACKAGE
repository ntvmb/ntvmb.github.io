NAME=libffi
DESCRIPTION="Foreign Function Interface library"
VERSION="3.4.6"
ABOSULTE_VERSION=197638
URL="https://github.com/libffi/libffi/releases/download/v3.4.6/libffi-3.4.6.tar.gz"
BUILD_DEPENDS=(make gcc binutils)
DEPENDS=(glibc)
OPTDEPENDS=()
PATCHES=()
METAPACKAGE=false

prepare() {
    ./configure --prefix=/usr          \
                --disable-static       \
                --with-gcc-arch=native
    return $?
}

build() {
    make || return 1
    make check
    return $?
}

do_install() {
    make install
    return $?
}

postinst() {
    return 0
}

detect() {
    if [ -f /usr/lib/libffi.so ]; then
        return 0
    else
        return 1
    fi
}

NAME=lz4
DESCRIPTION="Fast LZ compression algorithm utilities"
VERSION="1.10.0"
ABOSULTE_VERSION=68096
URL="https://github.com/lz4/lz4/releases/download/v1.10.0/lz4-1.10.0.tar.gz"
BUILD_DEPENDS=(make gcc binutils)
DEPENDS=(glibc)
OPTDEPENDS=()
PATCHES=()
METAPACKAGE=false

prepare() {
    return $?
}

build() {
    # because there's a 'build' dir in the lz4 tarball, sl-pkg will attempt
    # to build from this directory, but we need to be in the tarball root
    if [ basename $(pwd) = "build" ]; then cd ..; fi
    make BUILD_STATIC=no PREFIX=/usr || return 1
    make -j1 check
    return $?
}

do_install() {
    if [ basename $(pwd) = "build" ]; then cd ..; fi
    make BUILD_STATIC=no PREFIX=/usr install
    return $?
}

postinst() {
    return 0
}

detect() {
    OUT=$(lz4 --version) || return 1
    declare -g VERSION=$(echo $OUT | awk '{ print $3; }' | tail -c +2)
}
